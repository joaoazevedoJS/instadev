{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@PublicationsControllers/*": ["./src/Controllers/PublicationsControllers/*"],
      "@UsersControllers/*": ["./src/Controllers/UsersControllers/*"],
      "@WebControllers/*":  ["./src/Controllers/WebControllers/*"],
      "@CommentsControllers/*":  ["./src/Controllers/CommentsControllers/*"],
      "@LikesControllers/*":  ["./src/Controllers/LikesControllers/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  }
}
